@model IEnumerable<RuachSignups.Models.ShabbatModel>

@{
    ViewData["Title"] = "Reading Signups";
}

<h2>Signups</h2>

<p>
    <a asp-action="Create">Create New</a> | 
    <a asp-action="CreateAll">Save readings to DB</a>
</p>
<table class="table">
    <thead>
        <tr>
                <th>
                    @Html.DisplayNameFor(model => model.Date)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Title)
                </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Date)
            </td>
            <td>
                <span class="copyable">@Html.DisplayFor(modelItem => item.Title)</span><br/>
                Torah: <span class="copyable">@Html.DisplayFor(modelItem => item.Torah)</span><br/>
                Haftarah: <span class="copyable">@Html.DisplayFor(modelItem => item.Haftarah)</span><br/>
                @if (item.Maftir != null) {
                    <span>Maftir: </span><span class="copyable">@Html.DisplayFor(modelItem => item.Maftir)</span><br/>
                }
            </td>
            <td>
                @Html.ActionLink("Edit", "Edit", new { /* id=item.PrimaryKey */ }) |
                @Html.ActionLink("Details", "Details", new { /* id=item.PrimaryKey */ }) |
                @Html.ActionLink("Delete", "Delete", new { /* id=item.PrimaryKey */ })
            </td>
        </tr>
}
    </tbody>
</table>
